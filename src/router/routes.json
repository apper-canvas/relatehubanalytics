{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Dashboard is protected",
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/contacts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Contacts page requires authentication",
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/tasks": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Tasks page requires authentication", 
            "rule": "authenticated"
          }
        ]
      }
    }
  },
  "/pipeline": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Pipeline page requires authentication",
            "rule": "authenticated"
          }
        ]
}
    }
  },
  "/quotes": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Quotes page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public", 
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/*/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/*/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password page is public",
            "rule": "public"
          }
]
      }
    },
    "/sales-orders": {
      "allow": {
        "when": {
          "conditions": [
            {
              "label": "User must be logged in to view sales orders",
              "rule": "authenticated"
            }
          ]
        },
        "redirectOnDeny": "/login"
      }
    }
  }
}